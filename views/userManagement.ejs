<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin - User Management</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f4f4f4;
      margin: 0;
      padding: 0;
    }

    /* Header */
    header {
      background: #333;
      color: white;
      padding: 15px 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    header h1 {
      margin: 0;
      font-size: 22px;
    }

    header button {
      background: #ff4d4d;
      color: white;
      border: none;
      padding: 8px 16px;
      border-radius: 5px;
      cursor: pointer;
    }

    /* Container */
    .container {
      padding: 20px;
    }

    .search-box {
      margin-bottom: 15px;
      text-align: right;
    }

    .search-box input {
      padding: 8px;
      width: 250px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      background: #fff;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    table th, table td {
      padding: 12px;
      border: 1px solid #ddd;
      text-align: center;
    }

    table th {
      background: #555;
      color: white;
    }

    .btn {
      padding: 6px 12px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    .btn-block { background: #ff4d4d; color: white; }
    .btn-unblock { background: #4CAF50; color: white; }
    .btn-delete { background: #333; color: white; }

  </style>
</head>
<body>

  <!-- Header -->
  <header>
   <h2>ðŸ‘¥ Student Management</h2>
    <button onclick="logout()">Logout</button>
  </header>

  <div class="container">
   

    <!-- <div class="search-box">
      <input type="text" id="searchInput" placeholder="Search by username or email..." onkeyup="searchUser()">
    </div> -->

    <table id="userTable">
      <thead>
        <tr>
          <th>Student ID</th>
          <th>Student Name</th>
          <th>Age</th>
          <th>Course</th>
          <th>Week</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>1</td>
          <td>Alice</td>
          <td>alice@example.com</td>
          <td>Active</td>
          <td>User</td>
          <td>
            <button class="btn btn-block" onclick="blockUser(this)">Block</button>
            <button class="btn btn-delete">Delete</button>
          </td>
        </tr>
        <tr>
          <td>2</td>
          <td>Bob</td>
          <td>bob@example.com</td>
          <td>Blocked</td>
          <td>User</td>
          <td>
            <button class="btn btn-unblock" onclick="unblockUser(this)">Unblock</button>
            <button class="btn btn-delete">Delete</button>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

  <script>
    function blockUser(button) {
      let row = button.closest("tr");
      row.cells[3].textContent = "Blocked";
      button.outerHTML = '<button class="btn btn-unblock" onclick="unblockUser(this)">Unblock</button>';
    }

    function unblockUser(button) {
      let row = button.closest("tr");
      row.cells[3].textContent = "Active";
      button.outerHTML = '<button class="btn btn-block" onclick="blockUser(this)">Block</button>';
    }

    function searchUser() {
      let input = document.getElementById("searchInput").value.toLowerCase();
      let rows = document.querySelectorAll("#userTable tbody tr");
      rows.forEach(row => {
        let username = row.cells[1].textContent.toLowerCase();
        let email = row.cells[2].textContent.toLowerCase();
        if (username.includes(input) || email.includes(input)) {
          row.style.display = "";
        } else {
          row.style.display = "none";
        }
      });
    }

    function logout() {
      // Redirect to login page or clear session
      alert("Logged out successfully!");
      window.location.href = "/admin/login";
    }
  </script>
</body>
</html>
